{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <!-- Libs CSS -->
    <link rel="stylesheet" href="{{ asset("css/all.min.css") }}">
    <link rel="stylesheet" href="{{ asset("css/jquery.fancybox.min.css") }}">
    <link rel="stylesheet" href="{{ asset("css/flickity.min.css") }}">
    <link rel="stylesheet" href="{{ asset("css/simplebar.min.css") }}">
    <link rel="stylesheet" href="{{ asset("css/vs2015.css") }}">
    <link rel="stylesheet" href="{{ asset("css/flickity-fade.css") }}">
    <link rel="stylesheet" href="{{ asset("css/feather.css") }}">
    <link rel="stylesheet" href="{{ asset("css/theme.min.css") }}">
    <link rel="stylesheet" href="{{ asset("css/style.css") }}">

