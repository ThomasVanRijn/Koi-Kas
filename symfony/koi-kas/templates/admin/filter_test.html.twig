{% extends 'base.html.twig' %}

{% block main %}
    <div class="container">
        <div class="row">
            <form action="{{ path('filterTest') }}" method="get">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <label class="input-group-text" for="inputGroupSelect01">Soort</label>
                    </div>
                    <select name="soort" class="custom-select" id="soort">
                        <option value="*">Alle soorten</option>
                        <{% for soort in soorten %}
                        <option value="{{ soort.naam }}">{{ soort.naam }}</option>
                        {% endfor %}
                    </select>

                    <div class="input-group-prepend">
                        <label class="input-group-text" for="inputGroupSelect01">Kweker</label>
                    </div>
                    <select name="kweker" class="custom-select" id="kweker">
                        <option value="*">Alle kwekers</option>
                        {% for kweker in kwekers %}
                            <option value="{{ kweker.naam }}">{{ kweker.naam }}</option>
                        {% endfor %}
                    </select>
                    <div class="input-group-prepend">
                        <label class="input-group-text" for="inputGroupSelect01">Leeftijd</label>
                    </div>
                    <select name="leeftijd" class="custom-select" id="leeftijd">
                        <option value="*">Alle leeftijden</option>
                        {% for leeftijd in leeftijden %}
                            <option value="{{ leeftijd.naam }}">{{ leeftijd.naam }}</option>
                        {% endfor %}
                    </select>
                    <div class="input-group-prepend">
                        <label class="input-group-text" for="inputGroupSelect01">Maat</label>
                    </div>
                    <select name="maat" class="custom-select" id="maat">

                        <option value="*">Alle maten</option>
                        {% for maat in maten %}
                            <option value="{{ maat.naam }}">{{ maat.naam }}</option>
                        {% endfor %}
                    </select>
                    <button type="submit" class="btn btn-primary btn-sm d-inline" style="height: 54px">Filter</button>
                </div>
            </form>
        </div>

        <br>

        <div class="row">
            {% for product in producten %}
                <a href="{{ path('karper_detail', {'id': product.id }) }}">
                    <div class="col-6 col-md-4">

                        <!-- Cards -->
                        <div class="card mb-7">

                            <!-- Image -->
                            <div class="card-img">

                                <!-- Image -->
                                <img class="card-img-top card-img-back" src="{{ product.image }}" alt="...">

                            </div>

                            <!-- Body -->
                            <div class="card-body px-0">


                                <!-- Title -->
                                <div class="font-weight-bold">
                                    <a class="text-body" href="product.html">
                                        {{ product.naam }}
                                    </a>
                                </div>

                                <!-- Price -->
                                <div class="font-weight-bold text-muted">
                                    &euro; {{ product.prijs }}
                                </div>

                            </div>

                        </div>
                    </div>
                </a>
            {% endfor %}
        </div>
    </div>
{% endblock %}