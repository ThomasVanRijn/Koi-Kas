{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <!-- Libs CSS -->
    <link rel="stylesheet" href="{{ asset("css/all.min.css") }}">
    <link rel="stylesheet" href="{{ asset("css/jquery.fancybox.min.css") }}">
    <link rel="stylesheet" href="{{ asset("css/flickity.min.css") }}">
    <link rel="stylesheet" href="{{ asset("css/simplebar.min.css") }}">
    <link rel="stylesheet" href="{{ asset("css/vs2015.css") }}">
    <link rel="stylesheet" href="{{ asset("css/flickity-fade.css") }}">
    <link rel="stylesheet" href="{{ asset("css/feather.css") }}">
    <link rel="stylesheet" href="{{ asset("css/theme.min.css") }}">
    <link rel="stylesheet" href="{{ asset("css/style.css") }}">

    <script>
        window.dataLayer = window.dataLayer || [];

        function gtag() {
            dataLayer.push(arguments);
        }

        gtag('js', new Date());

        gtag('config', 'UA-154926440-1');

    </script>
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <!-- <script type="text/javascript" async="" src="./Shopper_files/analytics.js.download"></script> -->
    <!-- <script async="" src="./Shopper_files/js"></script> -->
{% endblock %}

{% block main %}
    <div class="container">
        <div class="row">
            {% for product in producten %}
                <a href="{{ path('product_detail', {'naam': product.categorie.naam , 'id': product.id }) }}">

                    <div class="col-6 col-md-4">

                        <!-- Cards -->
                        <div class="card mb-7">

                            <!-- Image -->
                            <div class="card-img">

                                <!-- Image -->
                                <img class="card-img-top card-img-back" src="{{ product.image }}" alt="...">

                            </div>

                            <!-- Body -->
                            <div class="card-body px-0">

                                <!-- Category -->
                                <div class="font-size-xs">
                                    <a class="text-muted" href="shop.html">{{ product.categorie.naam }}</a>
                                </div>

                                <!-- Title -->
                                <div class="font-weight-bold">
                                    <a class="text-body" href="product.html">
                                        {{ product.naam }}
                                    </a>
                                </div>

                                <!-- Price -->
                                <div class="font-weight-bold text-muted">
                                    &euro; {{ product.prijs }}
                                </div>

                            </div>

                        </div>
                    </div>
                </a>
            {% endfor %}
        </div>
    </div>
{% endblock %}