{% extends 'base.html.twig' %}

{% block main %}
    <div class="container">
        <div class="row">
            {% for product in producten %}
                <a href="{{ path('karper_detail', {'id': product.id }) }}">

                    <div class="col-6 col-md-4">

                        <!-- Cards -->
                        <div class="card mb-7">

                            <!-- Image -->
                            <div class="card-img">

                                <!-- Image -->
                                <img class="card-img-top card-img-back" src="{{ product.image }}" alt="...">

                            </div>

                            <!-- Body -->
                            <div class="card-body px-0">

                                <!-- Category -->
                                <div class="font-size-xs">
                                    <a class="text-muted" href="shop.html">{{ product.soort.naam }}</a>
                                </div>

                                <!-- Title -->
                                <div class="font-weight-bold">
                                    {{ product.naam }}
                                </div>



                            </div>

                        </div>
                    </div>
                </a>
            {% endfor %}
        </div>
    </div>
{% endblock %}