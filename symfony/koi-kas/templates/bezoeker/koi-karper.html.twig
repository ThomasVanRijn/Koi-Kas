{% extends 'base.html.twig' %}

{% block main %}
    <div class="container">
        <div class="row">
            {% for product in producten %}

                <div class="col-6 col-md-4">

                    <!-- Cards -->
                    <div class="card mb-7">

                        <!-- Image -->
                        <div class="card-img">

                            <!-- Image -->
                            <img class="card-img-top card-img-back" src="{{ product.image }}" alt="...">

                        </div>

                        <!-- Body -->
                        <div class="card-body px-0">


                            <!-- Title -->
                            <div class="font-weight-bold">
                                <a class="text-body" href="product.html">
                                    {{ product.naam }}
                                </a>
                            </div>

                            <!-- Price -->
                            <div class="font-weight-bold text-muted">
                                &euro; {{ product.prijs }}
                            </div>

                        </div>

                    </div>
                </div>
                </a>
            {% endfor %}
        </div>
    </div>
{% endblock %}