{% extends 'base.html.twig' %}

{% block title %}BlogImage index{% endblock %}

{% block main %}
    <h1>BlogImage index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Naam</th>
                <th>File_naam</th>
                <th>File_path</th>
                <th>Extension</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for blog_image in blog_images %}
            <tr>
                <td>{{ blog_image.id }}</td>
                <td>{{ blog_image.naam }}</td>
                <td>{{ blog_image.fileNaam }}</td>
                <td>{{ blog_image.filePath }}</td>
                <td>{{ blog_image.extension }}</td>
                <td>
                    <a href="{{ path('blog_image_show', {'id': blog_image.id}) }}">show</a>
                    <a href="{{ path('blog_image_edit', {'id': blog_image.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('blog_image_new') }}">Create new</a>
{% endblock %}
